@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
    <div class="white_container register_container nav_top_menu" id="forgotpass">
        <div class="container registerMylass">

            <h2>@ViewData["Title"]</h2>
            <h4>Enter your email</h4>
            <hr />
            <div class="row">
                <div style="width:400px;margin: 0 auto">
                    <form method="post" >
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin:0 auto; margin-top:20px; display:block">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
