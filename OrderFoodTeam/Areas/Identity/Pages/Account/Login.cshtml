@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
 <div class="white_container register_container nav_top_menu" id="login">
        <div class=" container">
            <div class="row">
                <div class="col-md-12">
                    <div class="loginMyClass">
                        <h2>@ViewData["Title"]</h2>
                        <div class="row">
                            <div style="margin:0 auto; width:70%">
                                <section>
                                    <form id="account" method="post">

                                        <hr />
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Input.Email"></label>
                                            <input asp-for="Input.Email" class="form-control" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.Password"></label>
                                            <input asp-for="Input.Password" class="form-control" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="checkbox">
                                                <label asp-for="Input.RememberMe">
                                                    <input asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">Log in</button>
                                        </div>
                                        <div class="form-group group_list">
                                            <p>
                                                <a id="forgot-password" asp-page="./ForgotPassword" asp-fragment="forgotpass">Forgot your password?</a>
                                            </p>
                                            <p>
                                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" asp-fragment="register">Register as a new user</a>
                                            </p>
                                            <p>
                                                <button type="submit" asp-page-handler="SendVerificationEmail" class="btn-link" style="padding:0px;margin:0px;border:0px" asp-fragment="login">Resend email confirmation</button>
                                            </p>
                                        </div>
                                    </form>
                                </section>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
