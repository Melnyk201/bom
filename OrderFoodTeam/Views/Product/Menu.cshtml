@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model IEnumerable<OrderFoodTeam.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Menu";
}
@{

    var currentLink = $"/Product/Menu?page={ViewBag.CurrentPage}";
    


}
<div class="menu nav_top_menu" id="menu">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>@ViewBag.Title</h2>
                <hr>
                @if (User.IsInRole("admin"))
                {
                    <p class="btn_create_product">
                        <!---->
                        <a asp-action="Create"  class="btn btn-primary btn_create_product" asp-fragment="create">Create New</a>
                    </p>
                }
            <div class="category_product">
                <a href="/product/menu?page=@(ViewBag.CurrentPage)&productIdentity=2#MenuItem" class="btn btn-primary">All</a>
                <a href="/product/menu?page=@(ViewBag.CurrentPage)&productIdentity=0#MenuItem" class="btn btn-primary">Food</a>
                <a href="/product/menu?page=@(ViewBag.CurrentPage)&productIdentity=1#MenuItem" class="btn btn-primary">Drink</a>

            </div>
            <div class="row nav_top_product" id="MenuItem">
                <div class="block_Product">
                    @foreach (var item in Model)
                    {
                        
                        <div class="col-md-4">

                            <div class="itemMenu">



                                <div class="col-md-12">
                                    <img src="~/img/@item.Image.Url" alt="Alternate Text" class="img-thumbnail center-block" />
                                </div>
                               
                                <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                                <p class="description">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </p>
                                <div class="measurment"><h6>Measurment :<span>@Html.DisplayFor(modelItem => item.Measurement)</span></h6></div>

                                <div class="price"><h6>Price :<span>@Html.DisplayFor(modelItem => item.Price)</span></h6></div>
                                <a class="btn btn-primary" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@item.id">Add to basket</a>


                                @if (User.IsInRole("admin"))
                                {
                                    <div class="but_edit_delete">
                                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary" asp-fragment="edit">Edit</a>
                                        <!--<a asp-action="Details" asp-route-id="@item.id">Details</a>-->
                                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-primary" asp-fragment="delete">Delete</a>
                                    </div>
                                }


                            </div>

                        </div>

                    }
                </div>
            </div>
                <tr>
                    <td colspan="8" class="text-center">
                        <ul class="pagination">
                            @if (ViewBag.CurrentPage == 1)
                            {
                                <li class="page-item disabled"><span class="page-link">Попередній</span></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="/product/menu?page=@(ViewBag.CurrentPage - 1)&productIdentity=@(ViewBag.ProductIdentity)#MenuItem">Попередній</a></li>
                            }
                            @for (int i = 1; i <= ViewBag.PageCount; i++)
                            {
                                if (i == ViewBag.CurrentPage)
                                {
                                    <li class="page-item active"><span class="page-link"> @i<span class="sr-only">(current)</span></span></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="/product/menu?page=@i&productIdentity=@(ViewBag.ProductIdentity)#MenuItem">@i</a></li>
                                }
                            }
                            @if (ViewBag.CurrentPage == ViewBag.PageCount)
                            {
                                <li class="page-item disabled"><span class="page-link">Наступний</span></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="/product/menu?page=@(ViewBag.CurrentPage + 1)&productIdentity=@(ViewBag.ProductIdentity)#MenuItem">Наступний</a></li>
                            }
                        </ul>
                    </td>
                </tr>

            </div>
        </div>
    </div>
</div>
