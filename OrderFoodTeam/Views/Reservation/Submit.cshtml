@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model OrderFoodTeam.Models.Reservation
@{
    ViewData["Title"] = "Submit";
}
<div class="white_container register_container nav_top_menu" id="reservation">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Submit</h2>
                @if (User.IsInRole("admin"))
                {
                    <a asp-action="Watch" class="btn btn-primary" style="margin: 0 auto; display:table">Watch</a>


                }
                else
                {
                    <div class="col-md-12">
                        <h2>Your reservation is successful!</h2>

                        <a asp-action="Myres" class="btn btn-primary" style="margin: 0 auto; display:table">MyReservation</a>

                    </div>

                }
            </div>
        </div>
    </div>
</div>


